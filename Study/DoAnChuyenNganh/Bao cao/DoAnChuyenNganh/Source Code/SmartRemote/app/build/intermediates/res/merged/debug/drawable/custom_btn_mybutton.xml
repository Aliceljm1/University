<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape android:shape="rectangle">
        <corners android:radius="3dip" />

        <stroke android:width="1dip" android:color="#acb9b9" />

        <gradient android:angle="-90" android:endColor="#c9d6d6" android:startColor="#91a8a8" />
    </shape></item>
    <item android:state_focused="true"><shape android:shape="rectangle">
        <corners android:radius="3dip" />

        <stroke android:width="1dip" android:color="#adbaba" />

        <solid android:color="#c3d9d9" />
    </shape></item>
    <item><shape android:shape="rectangle">
        <corners android:radius="3dip" />

        <stroke android:width="1dip" android:color="#acb9b9" />

        <gradient android:angle="-90" android:endColor="#c3d9d9" android:startColor="#fcfcfc" />
    </shape></item>

</selector>